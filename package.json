{
  "name": "flexible-log-analyzer",
  "displayName": "Flexible Log Analyzer",
  "description": "Analyses and highlights log files with custom rules",
  "publisher": "Potato cake",
  "icon": "images/icon-placeholder.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/McCzarny/flexible-log-analyzer"
	},
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fllogan.helloWorld",
		"onView:fllogan-view",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
			"activitybar": [
				{
					"id": "fllogan",
					"title": "Flexible Log Analyzer",
					"icon": "images/icon-placeholder.svg"
				}
			]
		},
    "views": {
			"fllogan": [
				{
					"id": "fllogan-view",
					"name": "Flexible Log Analyzer",
					"icon": "images/icon-placeholder.svg",
					"contextualTitle": "Flexible Log Analyzer"
				}
			]
    },
    "commands": [
      {
        "command": "fllogan.runscripts.workspace",
        "title": "Run scripts with the all files",
        "icon": "$(run-all)"
      },
      {
        "command": "fllogan.runscripts.current",
        "title": "Run scripts with the current file",
        "icon": "$(play)"
      },
      {
        "command": "fllogan.clear",
        "title": "Clear all issues",
        "icon": "$(clear-all)"
      }
    ],
		"menus": {
      "view/title": [
        {
          "command": "fllogan.runscripts.current",
					"group": "navigation",
          "when": "view == fllogan-view"
        },
        {
          "command": "fllogan.runscripts.workspace",
					"group": "navigation",
          "when": "view == fllogan-view"
        },
        {
          "command": "fllogan.clear",
					"group": "navigation",
          "when": "view == fllogan-view"
        }
      ]
    },
    "configuration": {
      "title": "Flexible Log Analyzer",
      "properties": {
        "fllogan.scripsDirectory": {
          "type": ["string"],
          "default": ".analysers",
          "description": "Specifies the folder path containing the scripts for log analysis."
        },        
        "fllogan.files.include": {
          "type": ["array"],
          "default": [],
          "description": "Specify files to include when analysing files in a workspace. Use regex or literal names."
        },
        "fllogan.files.exclude": {
          "type": ["array"],
          "default": [],
          "description": "Specify files to include when analysing files in a workspace. Use regex or literal names."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
